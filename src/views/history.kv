<HistoryView@MDScreen>:
    name: "history"

    MDBoxLayout:
        orientation: 'vertical'
    
        StackLayout:
            size_hint_y: 1

            MDBoxLayout:
                id: blt_history_items
                orientation: 'vertical'
                size_hint_y: .1
                width: 500
                md_bg_color: [0.2, 0.2, 0.2, 1]

                MDScrollView:
                    do_scroll_x: False
                    MDList:
                        id: list_history_items